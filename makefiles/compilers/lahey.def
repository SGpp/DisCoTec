# definitions for Lahey-Fujitsu compiler

ifeq ($(COMPTYPE),LAHEY)
 FFLAGS += -M $(OBJDIR)
 ifeq ($(DEBUG),yes)
  FFLAGS += --o0 -g --f95 --info --warn --swm 2004,8202,8209,3126 \
	--trace --chk
 else
  FFLAGS += --o3 --fast -sse3 --prefetch --pca
 endif
 INCPATHS += -I/afs/@cell/@sys/soft/mvapich/mvapich2-1.2.0-em64t-sdr/lahey-8.10/include
 PREPROC += -DLAHEY
 LD      = $(FC) #-\#\#\#
 LDFLAGS = 
endif

PREPROC_FLAG = -Cpp
DOUBLE_PRECISION_FFLAGS = --dbl