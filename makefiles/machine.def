ifeq ($(MACHTYPE),x86_64-suse-linux)
 ifeq ($(findstring /parastation/mpi2-intel,$(MPIHOME)),/parastation/mpi2-intel)
  MACHINE = hpcff
 endif
endif
ifeq ($(OSTYPE),darwin8.0)
 MACHINE = mac
endif
ifeq ($(HPC_SYSTEM),leo2)
